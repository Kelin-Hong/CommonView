<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/quickaction_action_item_btn"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="0dp"
    android:paddingTop="0dp" >

    <ImageView
        android:id="@+id/quickaction2_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:gravity="center_vertical"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_menu_selected"
        android:visibility="invisible" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/quickaction2_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/quickaction2_line_height"
            android:drawablePadding="6dip"
            android:gravity="center_vertical"
            android:paddingLeft="2dip"
            android:paddingRight="6dip"
            android:textColor="#fff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/new_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/quickaction2_title"
            android:layout_marginLeft="-15dp"
            android:background="@drawable/dx_new_bkg"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/new_function_tip"
            android:textColor="@color/common_white"
            android:textSize="7sp"
            android:visibility="gone" >
        </TextView>
    </RelativeLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:background="@drawable/main_header_background"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="50dp"
        android:layout_height="fill_parent"
        android:scaleType="center"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:id="@+id/title_panel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/title"
            style="@style/MyWidget.TitleBarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <ImageView
            android:id="@+id/title_progress"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="4dp"
            android:scaleType="center"
            android:src="@drawable/title_loading"
            android:visibility="gone" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_extend"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@drawable/title_right_bg"
        android:minWidth="52dp"
        android:scaleType="center"
        android:src="@drawable/dx_titlebar_settings"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@drawable/title_right_bg"
        android:minWidth="52dp"
        android:scaleType="center"
        android:src="@drawable/dx_titlebar_settings"
        android:visibility="invisible" />

</LinearLayout>

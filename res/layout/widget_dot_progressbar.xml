<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbox_loading"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/progressbar_dot_loading_mask_color"
    android:gravity="center">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dot_progressbar_loading_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/progressbar_dot_loading_des_text_color"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/dot_progressbar_loading_dots"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/dot_progressbar_loading_dot_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:src="@drawable/progressbar_loading_dot" />

            <ImageView
                android:id="@+id/dot_progressbar_loading_dot_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/progressbar_loading_dot" />

            <ImageView
                android:id="@+id/dot_progressbar_loading_dot_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/progressbar_loading_dot" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>